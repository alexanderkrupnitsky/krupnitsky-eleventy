<div class="swiper {{ classnameSwiper }}">
	<div class="swiper-wrapper">

		{% for prop in carousel %}
			<div class="swiper-slide">
				<div class="card">
					<div class="avatar">
						<img src='{{ prop.avatar }}'/>
						<div class="name">
							<div class="fullname">{{ prop.fullname }}</div>
							<div class="nickname">{{ prop.nickname }}</div>
							<div class="from">{{ prop.from }}</div>
						</div>
					</div>
					<div class="msg">
						<p id="shrinkMe{{ loop.index }}" class="shrinkable">{{ prop.msg }}</p>
					</div>
				</div>
			</div>
		{% endfor %}

	</div>
	<div class="swiper-pagination block"></div>
	<div class="swiper-button-prev"></div>
	<div class="swiper-button-next"></div>
</div>