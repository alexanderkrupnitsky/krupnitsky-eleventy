<!DOCTYPE html>
<html lang="ru">
	<head>

		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>

		{# META #}
		{% if permalink === "404.html" %}
			<title>{{ title }}</title>
			<meta name="description" content="{{ description }}"/>
			<meta name="robots" content="nofollow, noindex"/>

		{% else %}
			<title>{{ title }}</title>
			<meta name="description" content="{{ description }}"/>
			<meta name="robots" content="follow, index"/>
			<link rel="canonical" href="{{ project.site }}{% if canonical %}{{ canonical }}{% else %}{{ permalink }}{% endif %}"/>
		{% endif %}
		{# /META #}

		{# STYLES #}
		<link rel="stylesheet" href="/css/_app.css"/>
		{% for prop in css %}
			<link rel="stylesheet" href="/css/{{ prop }}"/>
		{% endfor %}
		{# /STYLE #}

		{# FONTS #}
		{% include 'fonts.njk' %}
		{# /FONTS #}

		{# FAVICON #}
		<link rel="apple-touch-icon" sizes="144x144" href="/images/apple-touch-icon.png"/>
		<link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png"/>
		<link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png"/>
		<link rel="manifest" href="/images/site.webmanifest"/>
		<link rel="mask-icon" href="/images/safari-pinned-tab.svg" color="#5bbad5"/>
		<meta name="msapplication-TileColor" content="#da532c"/>
		<meta name="theme-color" content="#ffffff"/>
		{# /FAVICON #}

	</head>
	{% if css %}
		<body id="{{ id }}">
		{% else %}
			<body>
			{% endif %}

			{% include 'ads.njk' %}